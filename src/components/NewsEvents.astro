---
const news = [
  {
    title: "Fall Open House Announced",
    date: "August 15, 2025",
    excerpt: "Join us for our Fall Open House on September 10th to learn more about our classical Lutheran curriculum and meet our faculty.",
    url: "/news/fall-open-house",
    image: "https://images.unsplash.com/photo-1577896851231-70ef18881754?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
  },
  {
    title: "New Latin Program Launches",
    date: "July 28, 2025",
    excerpt: "We're excited to announce our enhanced Latin program for all grades, beginning this fall semester.",
    url: "/news/latin-program",
    image: "https://images.unsplash.com/photo-1471970394675-613138e45da3?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80"
  },
  {
    title: "Summer Reading List Released",
    date: "May 30, 2025",
    excerpt: "Our faculty has compiled grade-specific summer reading lists to keep students engaged with great literature during the break.",
    url: "/news/summer-reading",
    image: "https://images.unsplash.com/photo-1456513080510-7bf3a84b82f8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1073&q=80"
  }
];
---

<section class="py-16 bg-slate-50">
  <div class="container mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-hunter-green mb-4 font-serif">News & Upcoming Events</h2>
      <p class="text-xl text-gray-700 max-w-3xl mx-auto">
        Stay informed about the latest happenings at Christ Classical Academy.
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {news.map(item => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden transform transition-all duration-300 hover:-translate-y-2 hover:shadow-lg">
          <div class="h-48 overflow-hidden">
            <img src={item.image} alt={item.title} class="w-full h-full object-cover transition-transform duration-500 hover:scale-105" />
          </div>
          <div class="p-6">
            <p class="text-sm text-gray-500 mb-2">{item.date}</p>
            <h3 class="text-xl font-bold mb-3 text-hunter-green font-serif">{item.title}</h3>
            <p class="text-gray-700 mb-4">{item.excerpt}</p>
            <a href={item.url} class="text-academy-blue hover:text-hunter-green font-medium inline-flex items-center transition-all duration-300 hover:translate-x-1">
              Read More
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-10">
      <a 
        href="/news" 
        class="btn btn-primary"
      >
        View All News & Events
      </a>
    </div>
  </div>
</section>