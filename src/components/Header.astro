---
const navItems = [
  { name: "Home", url: "/" },
  { name: "About", url: "/about" },
  { name: "Academics", url: "/academics" },
  { name: "Admissions", url: "/admissions" },
  { name: "Support", url: "/support" },
  { name: "Contact", url: "/contact" },
  { name: "Church", url: "https://www.christlutheranmanhattan.org" },
];

// Get the current path and ensure it has a trailing slash for proper matching
const currentPath = Astro.url.pathname;
const normalizedPath = currentPath.endsWith('/') ? currentPath : `${currentPath}/`;
---

<header class="bg-white shadow-md">
  <div class="container mx-auto">
    <!-- Main Navigation -->
    <div class="flex justify-between items-center py-4">
      <a href="/" class="flex items-center">
        <div class="text-2xl font-bold text-hunter-green">
          <span class="font-serif">Christ Classical Academy</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:block">
        <ul class="flex space-x-6">
          {navItems.map(item => {
            // Normalize URL for comparison
            const itemUrl = item.url === "/" ? "/" : item.url.endsWith('/') ? item.url : `${item.url}/`;
            // Check if this is the active page
            const isActive = (itemUrl === "/" && normalizedPath === "/") || 
                            (itemUrl !== "/" && normalizedPath.startsWith(itemUrl));
            
            return (
              <li>
                <a 
                  href={item.url} 
                  class={`text-gray-700 hover:text-academy-blue font-medium transition-all duration-300 ease-in-out hover:scale-105 pb-1 ${
                    isActive ? 'text-academy-blue font-bold border-b-2 border-academy-blue' : ''
                  }`}
                  target={item.name === "Church" ? "_blank" : "_self"}
                >
                  {item.name}
                </a>
              </li>
            );
          })}
        </ul>
      </nav>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-gray-700 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <ul class="space-y-2">
        {navItems.map(item => {
          // Normalize URL for comparison
          const itemUrl = item.url === "/" ? "/" : item.url.endsWith('/') ? item.url : `${item.url}/`;
          // Check if this is the active page
          const isActive = (itemUrl === "/" && normalizedPath === "/") || 
                          (itemUrl !== "/" && normalizedPath.startsWith(itemUrl));
          
          return (
            <li>
              <a 
                href={item.url} 
                class={`block px-4 py-2 text-gray-700 hover:bg-gray-100 hover:text-academy-blue rounded transition-all duration-300 ease-in-out ${
                  isActive ? 'text-academy-blue font-bold bg-gray-100 border-l-4 border-academy-blue' : ''
                }`}
                target={item.name === "Church" ? "_blank" : "_self"}
              >
                {item.name}
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>