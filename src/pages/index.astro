---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import MissionVision from '../components/MissionVision.astro';
import ClassicalApproach from '../components/ClassicalApproach.astro';
import CallToAction from '../components/CallToAction.astro';

const description = "Christ Classical Academy is a classical Lutheran school initiative in Manhattan, Kansas providing education rooted in tradition, truth, and excellence.";
const image = "https://images.unsplash.com/photo-1591585214068-50dca1a2ef14?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D";
---

<Layout 
  title="Home" 
  description={description}
  image={image}
>
  <Hero />
  
  <section class="py-8 bg-academy-blue/10">
    <div class="container mx-auto">
      <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-academy-blue">
        <h2 class="text-2xl font-bold mb-3 text-academy-blue font-serif">Planning Stage Announcement</h2>
        <p class="text-gray-700 mb-4">
          Christ Classical Academy is currently in the planning stages. This initiative is being led by Christ Lutheran Church in Manhattan, Kansas, with the goal of establishing a classical Lutheran school that serves our community.
        </p>
        <p class="text-gray-700">
          We invite interested families, potential donors, and community members to <a href="/contact" class="text-academy-blue hover:underline font-medium">contact us</a> to learn more about our progress and how you can support this important educational initiative.
        </p>
      </div>
    </div>
  </section>
  
  <MissionVision />
  <ClassicalApproach />
  <CallToAction />
</Layout>