---
import Layout from '../layouts/Layout.astro';
import NewsletterSubscribe from '../components/NewsletterSubscribe.astro';

const description = "Contact Christ Classical Academy, a classical Lutheran school initiative in Manhattan, Kansas. Reach out with questions or to express interest in our educational mission.";
const image = "https://images.unsplash.com/photo-1577896851231-70ef18881754?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80";
---

<Layout 
  title="Contact Us" 
  description={description}
  image={image}
>
  <section class="bg-hunter-green text-white py-16">
    <div class="container mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 font-serif">Contact Us</h1>
      <p class="text-xl max-w-3xl">
        We'd love to hear from you. Reach out with questions about our classical Lutheran education initiative or to express your interest.
      </p>
    </div>
  </section>
  
  <section class="py-12 bg-white">
    <div class="container mx-auto">
      <div class="max-w-5xl mx-auto">
        <NewsletterSubscribe />
        
        <div class="grid md:grid-cols-2 gap-12">
          <div>
            <h2 class="text-3xl font-bold mb-6 text-hunter-green font-serif">Get in Touch</h2>
            <form 
              name="contact"
              method="POST"
              netlify-honeypot="bot-field"
              data-netlify="true"
              data-netlify-recaptcha="true"
              class="space-y-6"
            >
              <p class="hidden">
                <label>
                  Don't fill this out if you're human: <input name="bot-field" />
                </label>
              </p>
              <input type="hidden" name="form-name" value="contact" />
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-gray-700 font-medium mb-2">First Name *</label>
                  <input 
                    type="text" 
                    id="firstName"
                    name="firstName" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-royal-purple"
                    required
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-gray-700 font-medium mb-2">Last Name *</label>
                  <input 
                    type="text" 
                    id="lastName"
                    name="lastName" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-royal-purple"
                    required
                  />
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-gray-700 font-medium mb-2">Email Address *</label>
                <input 
                  type="email" 
                  id="email"
                  name="email" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-royal-purple"
                  required
                />
              </div>
              
              <div>
                <label for="phone" class="block text-gray-700 font-medium mb-2">Phone Number *</label>
                <input 
                  type="tel" 
                  id="phone"
                  name="phone" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-royal-purple"
                  required
                />
              </div>
              
              <div>
                <label for="inquiry" class="block text-gray-700 font-medium mb-2">Inquiry Type *</label>
                <select 
                  id="inquiry"
                  name="inquiry" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-royal-purple"
                  required
                >
                  <option value="">Select an option</option>
                  <option value="prospective">Prospective Family</option>
                  <option value="donor">Potential Donor</option>
                  <option value="general">General Question</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-gray-700 font-medium mb-2">Message *</label>
                <textarea 
                  id="message"
                  name="message" 
                  rows="5" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-royal-purple"
                  required
                ></textarea>
              </div>

              <div data-netlify-recaptcha="true"></div>
              
              <button 
                type="submit" 
                class="bg-royal-purple text-white font-medium py-3 px-6 rounded-md transition-all duration-300 hover:bg-purple-800 ease-in-out shadow-md hover:shadow-lg"
              >
                Send Message
              </button>
            </form>
          </div>
          
          <div>
            <h2 class="text-3xl font-bold mb-6 text-hunter-green font-serif">Contact Information</h2>
            <div class="bg-slate-50 p-8 rounded-lg shadow-md">
              <div class="space-y-6">
                <div>
                  <h3 class="text-xl font-bold mb-2 text-royal-purple font-serif">Christ Lutheran Church</h3>
                  <p class="text-gray-700">
                    4592 Green Valley Rd<br />
                    Manhattan, KS 66502
                  </p>
                </div>
                
                <div>
                  <h3 class="text-xl font-bold mb-2 text-royal-purple font-serif">Email</h3>
                  <p class="text-gray-700">school@christclassicalmanhattan.org</p>
                </div>
                
                <div class="pt-4">
                  <h3 class="text-xl font-bold mb-4 text-royal-purple font-serif">Connect With Us</h3>
                  <div class="flex space-x-4">
                    <a href="https://www.christlutheranmanhattan.org" class="text-royal-purple hover:text-hunter-green transition-all duration-300 transform hover:scale-110" target="_blank">
                      <span class="sr-only">Christ Lutheran Church</span>
                      <i class="fa-solid fa-church text-2xl"></i>
                    </a>
                    <a href="https://www.facebook.com/people/Christ-Classical-Academy-Manhattan-KS/61572215054968/" class="text-royal-purple hover:text-hunter-green transition-all duration-300 transform hover:scale-110" target="_blank">
                      <span class="sr-only">Facebook</span>
                      <i class="fa-brands fa-facebook text-2xl"></i>
                    </a>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mt-8 bg-slate-50 p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-bold mb-4 text-royal-purple font-serif">Support Our Initiative</h3>
              <p class="text-gray-700 mb-4">
                Christ Classical Academy is a ministry initiative of Christ Lutheran Church in Manhattan, Kansas. We are seeking support from individuals and organizations who share our vision for classical Lutheran education in our community.
              </p>
              <a 
                href="/support/" 
                class="bg-royal-purple text-white font-medium py-3 px-6 rounded-md transition-all duration-300 hover:bg-purple-800 ease-in-out shadow-md hover:shadow-lg inline-block"
              >
                Learn How to Support
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
</Layout>