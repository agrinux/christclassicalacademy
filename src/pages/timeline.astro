---
import Layout from '../layouts/Layout.astro';

const description = "View the timeline and milestones for Christ Classical Academy, a classical Lutheran school initiative in Manhattan, Kansas.";
const image = "https://images.unsplash.com/photo-1577896851231-70ef18881754?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80";
---

<Layout 
  title="Timeline" 
  description={description}
  image={image}
>
  <section class="bg-hunter-green text-white py-16">
    <div class="container mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 font-serif">Timeline</h1>
      <p class="text-xl max-w-3xl">
        Follow our journey as we establish Christ Classical Academy in Manhattan, Kansas.
      </p>
    </div>
  </section>
  
  <section class="py-12 bg-white">
    <div class="container mx-auto">
      <div class="max-w-4xl mx-auto">
        <div class="relative space-y-8">
          <!-- Vertical line running through all timeline items -->
          <div class="absolute left-4 md:left-1/2 h-full w-0.5 bg-slate-200 transform -translate-x-1/2"></div>

          <!-- January 2025 -->
          <div class="relative flex md:justify-between group" data-date="2025-01">
            <div class="hidden md:block md:w-5/12"></div>
            <div class="absolute left-4 md:left-1/2 w-6 h-6 bg-hunter-green rounded-full border-4 border-white shadow transform -translate-x-1/2 flex items-center justify-center z-10">
              <div class="w-2 h-2 bg-white rounded-full"></div>
            </div>
            <div class="ml-12 md:ml-0 md:w-5/12">
              <div class="bg-slate-50 p-6 rounded-lg shadow-md transform transition duration-300 hover:-translate-y-2 hover:shadow-lg">
                <div class="text-xl font-bold text-hunter-green mb-2">January 2025</div>
                <div class="text-xl font-bold text-hunter-green mb-2">Church Vote & Fundraising Launch</div>
                <div class="text-gray-600">Church members unanimously vote to establish the school. Launch of fundraising campaign with a goal of $200,000.</div>
              </div>
            </div>
          </div>

          <!-- April 2026 -->
          <div class="relative flex md:justify-between group" data-date="2026-04">
            <div class="ml-12 md:ml-0 md:w-5/12">
              <div class="bg-slate-50 p-6 rounded-lg shadow-md transform transition duration-300 hover:-translate-y-2 hover:shadow-lg md:mr-8">
                <div class="text-xl font-bold text-hunter-green mb-2">April 2026</div>
                <div class="text-xl font-bold text-hunter-green mb-2">Teacher Hiring</div>
                <div class="text-gray-600">Church approval for teacher hire and beginning of faculty recruitment.</div>
              </div>
            </div>
            <div class="absolute left-4 md:left-1/2 w-6 h-6 bg-hunter-green rounded-full border-4 border-white shadow transform -translate-x-1/2 flex items-center justify-center z-10">
              <div class="w-2 h-2 bg-white rounded-full"></div>
            </div>
            <div class="hidden md:block md:w-5/12"></div>
          </div>

          <!-- August 2026 -->
          <div class="relative flex md:justify-between group" data-date="2026-08">
            <div class="hidden md:block md:w-5/12"></div>
            <div class="absolute left-4 md:left-1/2 w-6 h-6 bg-hunter-green rounded-full border-4 border-white shadow transform -translate-x-1/2 flex items-center justify-center z-10">
              <div class="w-2 h-2 bg-white rounded-full"></div>
            </div>
            <div class="ml-12 md:ml-0 md:w-5/12">
              <div class="bg-slate-50 p-6 rounded-lg shadow-md transform transition duration-300 hover:-translate-y-2 hover:shadow-lg">
                <div class="text-xl font-bold text-hunter-green mb-2">August 2026</div>
                <div class="text-xl font-bold text-hunter-green mb-2">School Launch</div>
                <div class="text-gray-600">Opening our doors to 10-14 students for our inaugural academic year.</div>
              </div>
            </div>
          </div>

          <!-- August 2027 -->
          <div class="relative flex md:justify-between group" data-date="2027-08">
            <div class="ml-12 md:ml-0 md:w-5/12">
              <div class="bg-slate-50 p-6 rounded-lg shadow-md transform transition duration-300 hover:-translate-y-2 hover:shadow-lg md:mr-8">
                <div class="text-xl font-bold text-hunter-green mb-2">August 2027</div>
                <div class="text-xl font-bold text-hunter-green mb-2">Growth Phase</div>
                <div class="text-gray-600">Expanding enrollment to 20 students.</div>
              </div>
            </div>
            <div class="absolute left-4 md:left-1/2 w-6 h-6 bg-hunter-green rounded-full border-4 border-white shadow transform -translate-x-1/2 flex items-center justify-center z-10">
              <div class="w-2 h-2 bg-white rounded-full"></div>
            </div>
            <div class="hidden md:block md:w-5/12"></div>
          </div>

          <!-- August 2028 -->
          <div class="relative flex md:justify-between group" data-date="2028-08">
            <div class="hidden md:block md:w-5/12"></div>
            <div class="absolute left-4 md:left-1/2 w-6 h-6 bg-hunter-green rounded-full border-4 border-white shadow transform -translate-x-1/2 flex items-center justify-center z-10">
              <div class="w-2 h-2 bg-white rounded-full"></div>
            </div>
            <div class="ml-12 md:ml-0 md:w-5/12">
              <div class="bg-slate-50 p-6 rounded-lg shadow-md transform transition duration-300 hover:-translate-y-2 hover:shadow-lg">
                <div class="text-xl font-bold text-hunter-green mb-2">August 2028</div>
                <div class="text-xl font-bold text-hunter-green mb-2">Further Expansion</div>
                <div class="text-gray-600">Hiring second teacher and growing to 30 students.</div>
              </div>
            </div>
          </div>

          <!-- December 2028 -->
          <div class="relative flex md:justify-between group" data-date="2028-12">
            <div class="ml-12 md:ml-0 md:w-5/12">
              <div class="bg-slate-50 p-6 rounded-lg shadow-md transform transition duration-300 hover:-translate-y-2 hover:shadow-lg md:mr-8">
                <div class="text-xl font-bold text-hunter-green mb-2">December 2028</div>
                <div class="text-xl font-bold text-hunter-green mb-2">CCLE Accreditation</div>
                <div class="text-gray-600">Achieving Consortium for Classical Lutheran Education accreditation.</div>
              </div>
            </div>
            <div class="absolute left-4 md:left-1/2 w-6 h-6 bg-hunter-green rounded-full border-4 border-white shadow transform -translate-x-1/2 flex items-center justify-center z-10">
              <div class="w-2 h-2 bg-white rounded-full"></div>
            </div>
            <div class="hidden md:block md:w-5/12"></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Ensure the timeline line extends fully */
  .relative.space-y-8 {
    padding-top: 2rem;
    padding-bottom: 2rem;
  }

  /* Smooth transitions for hover effects */
  .group {
    transition: all 300ms ease-in-out;
  }

  /* Enhanced dot styling */
  .rounded-full {
    transition: all 300ms ease-in-out;
  }

  .group:hover .rounded-full {
    transform: scale(1.2) translateX(-50%);
    box-shadow: 0 0 0 3px rgba(42, 78, 56, 0.2);
  }

  /* Mobile timeline adjustments */
  @media (max-width: 767px) {
    .ml-12 {
      margin-left: 3rem;
    }
  }
</style>