---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: string;
  canonicalURL?: string;
}

const { 
  title, 
  description = "Christ Classical Academy - A Classical Lutheran School in Manhattan, Kansas providing education rooted in tradition, truth, and excellence.",
  image = "https://images.unsplash.com/photo-1591585214068-50dca1a2ef14?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
  type = "website",
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href
} = Astro.props;

const siteTitle = `${title} | Christ Classical Academy`;

// Structured data for organization
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "EducationalOrganization",
  "name": "Christ Classical Academy",
  "url": "https://christclassicalmanhattan.org",
  "logo": image,
  "description": description,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "4592 Green Valley Rd",
    "addressLocality": "Manhattan",
    "addressRegion": "KS",
    "postalCode": "66502",
    "addressCountry": "US"
  },
  "parentOrganization": {
    "@type": "Organization",
    "name": "Christ Lutheran Church",
    "url": "https://www.christlutheranmanhattan.org"
  }
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">
    
    <!-- Primary Meta Tags -->
    <title>{siteTitle}</title>
    <meta name="title" content={siteTitle} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Christ Classical Academy" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={siteTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="author" content="Christ Classical Academy" />
    <meta name="keywords" content="classical education, Lutheran school, Manhattan Kansas, Christian education, classical Lutheran education, private school, Christ Classical Academy" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Source+Sans+3:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    
    <script defer data-domain="christclassicalmanhattan.org" src="https://plausible.io/js/script.file-downloads.outbound-links.js"></script>
    <script>window.plausible = window.plausible || function() { (window.plausible.q = window.plausible.q || []).push(arguments) }</script>

  </head>
  <body class="min-h-screen flex flex-col font-sans bg-slate-50">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --hunter-green: #2A4E38;
    --royal-purple: #4A2B83;
    --academy-blue: #0A3161;
  }
  
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Source Sans 3', sans-serif;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'EB Garamond', serif;
  }
  
  .container {
    width: 100%;
    max-width: 1280px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }
  
  @media (min-width: 640px) {
    .container {
      padding-left: 2.5rem;
      padding-right: 2.5rem;
    }
  }
  
  @media (min-width: 1024px) {
    .container {
      padding-left: 3rem;
      padding-right: 3rem;
    }
  }
</style>